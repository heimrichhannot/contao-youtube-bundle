<!-- indexer::stop -->
{% if fullsizeLink|default() %}
<div class="youtube_modal">
    {{ fullsizeLink }}
</div>
{% else %}
<div class="youtube_default">
    {% if hasPreviewImage|default() and previewImage|default() %}
    <div class="video-thumbnail{% if hasPreviewImage|default() %} video-hidden{% endif %}" data-media="youtube" title="{{ 'huh.youtube.title.play'|trans }}"{% if youtubePrivacy|default() %} data-privacy="true"{% endif %}{% if autoplay|default() %} data-autoplay="true"{% endif %}>
        <figure class="image_container">
            <img src="{{ previewImage }}" alt="{{ youtube }}">
            {% if videoDuration|default() %}
                <span class="duration">
                    {% if videoDuration matches '/^\\d+$/' %}
                        {% if videoDuration/3600 >=1 %}
                            {{ videoDuration|date('H:i:s') }}
                        {% else %}
                            {{ videoDuration|date('i:s') }}
                        {% endif %}
                    {% else %}
                        {{ videoDuration }}
                    {% endif %}
                    </span>
            {% endif %}
            {% if playButton|default() %}
                <span class="play-button"></span>
            {% endif %}
        </figure>
        {% if youtubePrivacy|default() %}
            {{ privacy|raw }}
        {% endif %}
        {% endif %}
        <div class="video-container">
            {% if hasPreviewImage|default() %}
                <iframe src="about:blank" data-src="{{ src }}" allowfullscreen frameborder="0"></iframe>
            {% else %}
                <iframe src="{{ src }}" allowfullscreen frameborder="0"></iframe>
            {% endif %}
        </div>
    </div>
    {% endif %}
    <!-- indexer::continue -->
</div>

